source 'https://rubygems.org'

# 指定 Ruby 版本
ruby '2.6.10'

# 指定平台
platforms :ruby do
  gem 'jekyll-paginate'
  gem "jekyll", "~> 4.0"
  gem "rake"
  gem "webrick", "~> 1.7"
end

# 强制使用兼容的 sass 转换器
gem 'jekyll-sass-converter', '~> 2.0'

# 指定兼容的 gem 版本
gem 'google-protobuf', '~> 3.21.0'
gem 'ffi', '~> 1.15.0'

# SEO 和性能优化插件
gem 'jekyll-sitemap'
gem 'jekyll-feed'
gem 'jekyll-seo-tag'
gem 'jekyll-compress-images'

# 开发环境插件
group :development do
  gem 'jekyll-admin'
  gem 'jekyll-watch'
end
